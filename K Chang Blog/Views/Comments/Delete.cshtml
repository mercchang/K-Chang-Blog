@model K_Chang_Blog.Models.Comment

@{
    ViewBag.Title = "Delete";
}


<div class="col-8 py-3">
    <h3>Are you sure you want to delete this comment?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>

        <dd class="pl-3">
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BlogPost.Title)
        </dt>

        <dd class="pl-3">
            @Html.DisplayFor(model => model.BlogPost.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd class="pl-3">
            @Html.DisplayFor(model => model.Created)
        </dd>

        @if (Model.Updated != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Updated)
            </dt>

            <dd class="pl-3">
                @Html.DisplayFor(model => model.Updated)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.CommentBody)
        </dt>

        <dd class="pl-3">
            @Html.DisplayFor(model => model.CommentBody)
        </dd>

    </dl>
    <hr />
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="row">
                <div class="col-3">
                    @Html.ActionLink("Back to List", "Index")
                </div>
                <div class="col">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            </div>
            
            
        </div>
    }
</div>
