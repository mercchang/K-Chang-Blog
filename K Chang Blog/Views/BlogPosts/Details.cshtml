@using PagedList
@using PagedList.Mvc
@using K_Chang_Blog.Models
@using Microsoft.AspNet.Identity
@model BlogPost

@{
    ViewBag.Title = "Details";
    var db = new ApplicationDbContext();
    var blogPost = db.BlogPosts.Find(Model.Id);
    var comments = blogPost.Comments;
    var user = db.Users.Find(User.Identity.GetUserId());
    
}


<div class="col-8 pt-3">
    <div class="container-fluid">
        <section>
            @if (Model.ImagePath != null)
            {
                <img class="img-fluid mb-5" src=@Model.ImagePath alt="">
            }
            else
            {
                <img src="~/Images/img_10.jpg" alt="Image" class="img-fluid mb-5"> @*placeholder img*@
            }
        </section>
        <section>
            <div class="container">
                <div class="row blog-entries element-animate">
                    <div class="col main-content">
                        <div class="post-meta">
                            <span class="author mr-2"><img src="~/Images/face.jpg" alt="Colorlib" class="mr-2"> Colorlib</span>&bullet;
                            <span class="mr-2">@Model.Created </span> &bullet;
                            <span class="ml-2"><span class="fa fa-comments"></span> 3</span>
                        </div>
                        <h3 class="mb-4" style="text-align:center">@Model.Title</h3>

                        <div class="post-content-body pb-3">
                            <p>@Html.Raw(Model.BlogPostBody)</p>
                        </div>
                        <hr />
                        <!-- comments -->
                        <div class="pt-2">
                            <h4 class="mb-5">@Model.Comments.Count() Comments</h4>
                            @foreach (var comment in Model.Comments.OrderByDescending(c => c.Created))
                            {
                                <div class="container mt-3">
                                    <div class="media">
                                        <img src="~/Images/img_10.jpg" class="align-self-start mr-3" style="width:60px" />
                                        <div class="media-body">
                                            <h3>@comment.Author.DisplayName</h3>                             @*@comment.Author.Email*@
                                            <div class="meta small">@comment.Created</div>    @*@comment.Created.ToString("MMM dd, yyyy")*@
                                            <p>@comment.CommentBody</p>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="row mt-5">
                                <div class="col-md-12 text-center">
                                    <nav aria-label="Page navigation" class="text-center">
                                        @*@Html.PagedListPager(comments, page => Url.Action("Details", new { page }))PAGES*@
                                    </nav>
                                </div>
                            </div>

                            <!-- END comment-list -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="row py-3">
                                    @using (Html.BeginForm("Create", "Comments", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("BlogPostId", Model.Id)
                                        
                                        <div class="col">
                                            @Html.TextArea("CommentBody", new { rows = 5, cols = 70, placeholder = "Comment..." })
                                        </div>
                                        <div class="col">
                                            <button type="submit" class="btn btn-sm btn-dark">Add Comment</button>
                                        </div>
                                        
                                    }
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section scripts{       @*puts section scripts into layout @rendersection*@
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/jquery-migrate-3.0.0.js"></script>
<script src="~/Scripts/popper.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/owl.carousel.min.js"></script>
<script src="~/Scripts/jquery.waypoints.min.js"></script>
<script src="~/Scripts/jquery.stellar.min.js"></script>
<script src="~/Scripts/main.js"></script>

}