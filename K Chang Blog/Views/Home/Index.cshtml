@using K_Chang_Blog.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<BlogPost>
@{
    ViewBag.Title = "Home Page";
}

<header role="banner">
    <div class="top-bar">
        <div class="container">
            <div class="row">
                <div class="col">
                    <!-- <a href="#"><span class="fa fa-search"></span></a> -->
                    @using (Html.BeginForm("Index", "BlogPosts", FormMethod.Get, htmlAttributes: new { @class = "form" }))
                    {
                        <div class="controls controls-row search-row float-right">
                            <input id="searchStr" name="searchStr" class="search-top-form" type="text" placeholder="Search...">
                            <button id="searchStr" name="searchStr" type="submit"><i class="fa fa-search"></i></button>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container logo-wrap">
        <div class="row pt-5">
            <div class="col-12 text-center">
                <a class="absolute-toggle d-block d-md-none" data-toggle="collapse" href="#navbarMenu" role="button" aria-expanded="false" aria-controls="navbarMenu"><span class="burger-lines"></span></a>
                <h1 class="site-logo">BLOG</h1>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-md  navbar-light bg-light">
        <div class="container">
            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav mx-auto">
                    <li>
                        <p>Home</p>
                    </li>
                    <li>
                        <p>&#183</p>
                    </li>
                    <li>
                        <a href="~/Home/About">About</a>
                    </li>
                    <li>
                        <p>&#183</p>
                    </li>
                    <li>
                        <a href="~/Home/Contact">Contact</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <p>&#183</p>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Manage Posts", "Index", "BlogPosts")
                        </li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>
                            <p>&#183</p>
                        </li>
                        <li>
                            <a href="~/Account/Login">Login</a>
                        </li>
                        <li>
                            <p>&#183</p>
                        </li>
                        <li>
                            <a href="~/Account/Register">Register</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <p>&#183</p>
                        </li>
                        <li>
                            @Html.ActionLink("Log Out", "LogOut", "Account")
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
</header>

@* BlogPosts *@
<div class="col-md-8">
    <!-- Top Image -->
    <div class="container-fluid">
        <div class="row pt-5 pb-5">
            <img class="img-fluid" src="~/Images/bloghome.jpg" alt="Image placeholder">
        </div>
        <!-- END section -->
        <!-- Blog Posts Section -->

        <div class="row">
            <div class="col">
                <h2 class="mb-4" style="text-align:center">LATEST POSTS</h2>
            </div>
        </div>
        <div class="row-md-5">
            @foreach (var blogPost in Model)
            {
                <div class="row">
                    <div class="col">
                        <a href=@Url.Action("Details", "BlogPosts", new { slug = blogPost.Slug }) class="blog-entry element-animate" data-animate-effect="fadeIn">
                            @if (blogPost.ImagePath != null)
                            {
                                <img class="img-fluid" src="@blogPost.ImagePath" alt="">
                            }
                            else
                            {
                                <img class="img-fluid" src="~/Images/img_5.jpg" alt="Image placeholder">
                            }

                            <div class="blog-content-body">
                                <div class="row">
                                    <div class="post-meta">
                                        <span class="author mr-2"><img src="~/Images/face.jpg" alt="Colorlib">   Colorlib</span>&bullet;
                                        <span class="mr-2">@blogPost.Created </span> &bullet;
                                        <span class="ml-2"><span class="fa fa-comments"></span> x comments</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <h2>@blogPost.Title</h2>
                                </div>
                                <div id="abstracttext" class="row">
                                    @blogPost.Abstract
                                </div>
                            </div>
                        </a>
                    </div>

                </div>
            }
        </div>

        <!-- Pages -->
        <div class="row mt-5">
            <div class="col-md-12 text-center">
                <nav aria-label="Page navigation" class="text-center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchStr = ViewBag.Search }))
                </nav>
            </div>
        </div>
    </div>
</div>

@* Side Box *@
<div class="col pl-4">
    <div class="sidebar-box search-form-wrap">
        <!--BLANK SPACE-->
    </div>
    <!-- END sidebar-box -->
    <!--================CHANGE THIS TO LOGGED IN USER=================-->
    <div class="sidebar-box">
        <div class="bio text-center">
            @if (User.IsInRole("Admin"))
            {
                <img src="~/Images/face.jpg" alt="Image Placeholder" class="img-fluid">
            }
            else if (User.Identity.IsAuthenticated)
            {
                <img src="~/Images/default-face.jpg" alt="Image Placeholder" class="img-fluid">
            }
            else
            {
                <img src="~/Images/default-face.jpg" alt="Image Placeholder" class="img-fluid">
            }
            <div class="bio-body">
                <h2>@User.Identity.Name</h2>
                @if (User.IsInRole("Admin"))
                {
                    <p>Administrator</p>
                }
                else if (User.IsInRole("Moderator"))
                {
                    <p>Moderator</p>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <p>You are logged in</p>
                }
                else
                {
                    <p>Please log in to post a comment</p>
                }

                @if (!User.Identity.IsAuthenticated)
                {
                    <p><a href="~/Account/Login" class="btn btn-primary btn-sm rounded">Log In</a></p>
                    <p><a href="~/Account/Register">Register</a></p>
                }
                else
                {
                    <p>@Html.ActionLink("Log Out", "LogOut", "Account", null, new { @class = "btn btn-primary btn-sm rounded" })</p>
                    <p>@Html.ActionLink("Reset Password", "ResetPassword", "Account")</p>
                }
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Create New Post", "Create", "BlogPosts")
                }

            </div>
        </div>
    </div>
    <!--===============================================================-->
    <div class="sidebar-box">
        <h3 class="heading">Categories</h3>
        <ul class="categories">
            <li><a href="#">Food <span>(12)</span></a></li>
            <li><a href="#">Travel <span>(22)</span></a></li>
            <li><a href="#">Lifestyle <span>(37)</span></a></li>
            <li><a href="#">Business <span>(42)</span></a></li>
            <li><a href="#">Adventure <span>(14)</span></a></li>
        </ul>
    </div>
</div>
